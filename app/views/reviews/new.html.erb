<h1>Write a Review</h1>
<%= form_for @review do |f| %>
  <%= f.text_field :title, placeholder: "Enter Title" %>
  <%= f.date_field :date %>
  <%# <%= f.hidden_field :user_id, :value => current_user.id %> %>
  <br>
  <h2>Beer</h2>
  <ul>

  <%= f.fields_for :beers, @beer = Beer.new do |b| %>
    <li><%= b.label :name %>
    <%= b.text_field :name %></li>
    <li><%= b.label :style %>
    <%= b.text_field :style %> &nbsp
    <%= b.label :country %>
    <%= b.country_select :country %></li>
    <li><%= b.label :ABV, 'ABV' %>
    <%= b.number_field :ABV, step: :any %></li>
    <li><%= b.label :IBU, 'IBU' %>
    <%= b.number_field :IBU, step: :any %></li>
  <% end %>
  </ul>
  <p><%= f.label 'Review:' %></p>
  <%= f.text_area :text, size: "42x17" %>
  <br>
  <%= hidden_field_tag "user_id", current_user.id %>
  <%= f.submit 'Submit' %>
<% end %>
